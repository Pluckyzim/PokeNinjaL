  MoneyButton
    anchors.top: prev.top
    anchors.left: prev.right

  Label
    anchors.top: prev.bottom
    anchors.horizontalCenter: parent.horizontalCenter
    margin-top: 15
    font: sans-bold-16px
    color: white
    text-auto-resize: true
    text: PARA

  TextEdit
    width: 150
    anchors.top: prev.bottom
    anchors.horizontalCenter: parent.horizontalCenter
    image-color: alpha
    color: #f7ff5c
    text-align: center
    border-width-bottom: 1
    border-color-bottom: white

  ActionButton
    anchors.top: prev.bottom
