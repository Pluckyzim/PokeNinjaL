Extract < Container


UIWindow
  size: 600 350
  anchors.centerIn: parent
  icon: images/ui
  icon-size: 590 315
  icon-clip: 0 0 600 350
  image-border-left: 10
  visible: false

  UIButton
    size: 13 13
    anchors.top: parent.top
    anchors.right: parent.right
    margin: 23 38 0 0
    image-source: images/ui
    image-clip: 406 353 13 13
    !tooltip: tr("Fechar Janela")
    image-color: #b3b2b2
    @onClick: modules.game_bank.onGameEnd()

    $hover:
      image-color: white

  UIWidget
    id: uiIcon
    size: 38 38
    anchors.top: prev.top
    anchors.right: prev.left
    margin-right: 10
    icon: images/ui
    icon-size: 34 34
    visible: false

  Label
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin: -5 0 0 36
    color: white
    text-auto-resize: true
    text: "BEM VINDO, SEU SALDO É "

  Label
    id: lblBalance
    anchors.top: prev.top
    anchors.left: parent.left
    anchors.left: prev.right
    margin-left: 7
    color: #f7ff5c
    text: 230650000 CENTS (~23.065 HD)

  Panel
    id: panMain
    anchors.fill: parent
    anchors.top: prev.bottom
    margin: 5 30 50 20

